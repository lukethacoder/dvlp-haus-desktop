{
  "name": "dvlp-haus-desktop",
  "productName": "dvlp.haus",
  "version": "0.0.1",
  "description": "web developeres toolkit",
  "author": {
    "name": "lukethacoder",
    "email": "dev@lukesecomb.digital",
    "url": "https://lukesecomb.digital"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lukethacoder/dvlp-haus-desktop/issues"
  },
  "homepage": "https://github.com/lukethacoder/dvlp-haus-desktop",
  "main": "electron.js",
  "scripts": {
    "dev": "yarn start",
    "react-start": "parcel -p 3000 index.html --out-dir build",
    "react-build": "parcel build index.html --out-dir build --public-url ./",
    "electron-build": "electron-builder -mwl",
    "clean-build": "rm -rf build/ .cache dist/",
    "build": "yarn clean-build && yarn react-build && yarn electron-build",
    "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron . \"",
    "test-bundle": "bundlesize",
    "lint": "tslint '{src,test,mocks}/**/*.{ts,tsx}' --project ./tsconfig.json",
    "precommit": "lint-staged",
    "test": "jest '(\\/test\\/(?!e2e/)).*'"
  },
  "devDependencies": {
    "@types/react": "^16.9.35",
    "babel-core": "6.26.3",
    "babel-plugin-transform-class-properties": "latest",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-plugin-transform-react-jsx": "6.24.1",
    "babel-preset-env": "1.7.0",
    "babel-preset-react": "6.24.1",
    "bundlesize": "^0.18.0",
    "concurrently": "^5.0.2",
    "cross-env": "5.2.0",
    "electron": "4.0.1",
    "electron-builder": "20.38.4",
    "electron-devtools-installer": "^3.0.0",
    "kind-of": "^6.0.3",
    "parcel-bundler": "^1.12.4",
    "sass": "^1.26.5",
    "typescript": "^3.8.3",
    "wait-on": "3.2.0"
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^2.2.0",
    "autoprefixer": "^9.8.0",
    "electron-download": "^4.1.1",
    "electron-is-dev": "1.0.1",
    "electron-squirrel-startup": "^1.0.0",
    "re-resizable": "^6.4.0",
    "react": "16.13.0",
    "react-dom": "16.13.0",
    "tailwindcss": "^1.4.6",
    "tailwindcss-fluid-container": "^4.0.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(.+\\.test)\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/file.js",
      "\\.(s?css|sass)$": "<rootDir>/__mocks__/style.js"
    }
  },
  "build": {
    "appId": "com.luke",
    "files": [
      "src/electron.js",
      "src/assets/*",
      "build/**/*"
    ],
    "mac": {
      "target": "dmg",
      "icon": "src/assets/logo.png"
    },
    "win": {
      "target": "nsis",
      "icon": "src/assets/logo.png"
    },
    "linux": {
      "target": "deb",
      "icon": "src/assets/logo.png",
      "category": "Development"
    }
  },
  "bundlesize": [
    {
      "path": "./build/src.*.js",
      "maxSize": "250 kB"
    },
    {
      "path": "./build/src.*.css",
      "maxSize": "100 kB"
    }
  ]
}
